<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headline_list_bg"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:background="@drawable/bg_circular"
            android:layout_gravity="top|left"
            android:gravity="top|left"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="24dp"
            style="@style/headline_header"
            android:gravity="bottom" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/activity_margin_left_right"
        android:layout_marginEnd="@dimen/activity_margin_left_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                style="@style/news_author"
                />

            <TextView
                android:id="@+id/tvPublishedDate"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_height="wrap_content"
                style="@style/news_author"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/tvContent"
            style="@style/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
   </LinearLayout>
</ScrollView>